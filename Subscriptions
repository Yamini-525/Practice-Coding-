import java.io.*; 
import java.util.*; 

// don't change the name of this class
// you can add inner classes if needed
class Main {
    public static void main (String[] args) {
     Scanner sc=new Scanner(System.in);
       int n=sc.nextInt();
       int x=sc.nextInt();
       if(n%6==0)
       {
           int q=n/6;
           int v=x*q;
            System.out.println(v);
       }
       else
       {
            int q=n/6;
            q=q+1;
            int v=x*q;
            System.out.println(v);
       }
      
    }
}
