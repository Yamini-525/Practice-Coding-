import java.util.*;
class Main
{
    public static void main(String []args)
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        if(n>0)
        {
        for(int i=1;i<=n;i++)
        {
          for(int j=1;j<=n;j++)
          {
             if(j<=i)
             {
              System.out.print("*");
             }
             else
             {
              System.out.print("");
             }
          }
          System.out.println();
        }
        }
        else
        {
          System.out.println("Invalid Input");
        }
    }
}
/////// output 
5
* 
**
***
****
***** 

import java.util.*;
class Main{
  public static void main(String args[])
  {
     Scanner sc=new Scanner(System.in);
     int n=sc.nextInt();
     if(n>0)
     {
     for(int i=1;i<=n;i++)
     {
      for(int j=1;j<=n;j++)
      {
         int diff=n-i;
         if(j<=diff)
         {
          System.out.print(" ");
         }
         else
         {
          System.out.print("*");
         }
      }
      System.out.println();
     }
     }
     else
     {
      System.out.println("Invalid Input");
     }
  }
}
/////// output:
5
    *
   **
  ***
 ****
*****
